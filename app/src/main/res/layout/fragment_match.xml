<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="cl.karangop.shrinkquizz.views.tabs.MatchFragment"
    android:orientation="vertical">

    <TextView
        android:text="Tu edad"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/userAgeTv"
        android:layout_gravity="center_horizontal"
        android:text="0"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <SeekBar
        android:id="@+id/userAgeSb"
        android:max="120"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <TextView
        android:text="Su edad"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/loverAgeTv"
        android:text="0"
        android:layout_gravity="center_horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <SeekBar
        android:id="@+id/loverAgeSb"
        android:max="120"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <Button
        android:id="@+id/sendBtnMatch"
        android:text="ENVIAR"
        android:layout_marginTop="24dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

</LinearLayout>
